<Window x:Class="EnterTheIUT.View.AskingNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:EnterTheIUT.View.Res"
        xmlns:local="clr-namespace:EnterTheIUT.View"
        mc:Ignorable="d"
        Title="{x:Static res:Strings.EnterAName}" Height="150" Width="300">
    <Grid Background="#23262B">
        <Label Content="{x:Static res:Strings.EnterAName}" Foreground="AntiqueWhite" HorizontalAlignment="Center" Margin="20"/>
        <TextBox x:Name="textbox" Background="#2A333A" Width="250" Height="20" Foreground="AntiqueWhite" HorizontalAlignment="Center"/>
        <Button x:Name="button" Content="{x:Static res:Strings.Confirm}" Width="100" Height="20" Margin="0 60 0 0" Background="#23262B" Foreground="AntiqueWhite" 
                Click="ButtonConfirm_Click"/>
    </Grid>
</Window>
